{
  "name": "rnc-testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for the RNC application",
  "main": "comprehensive-test-runner.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "node run-integration-tests.js",
    "test:api-integration": "node api-integration-tests.js",
    "test:frontend-backend": "node frontend-backend-integration-tests.js",
    "test:all-integration": "node run-all-integration-tests.js",
    "test:demo": "node demo-integration-test.js",
    "test:partnership": "node partnership-application-test.js",
    "test:partnership-api": "node partnership-api-test.js",
    "test:donation-fundraising": "node donation-fundraising-test.js",
    "test:e2e": "node e2e-integration-tests.js",
    "test:cross-browser": "node cross-browser-tests.js",
    "test:all": "node comprehensive-test-runner.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:quick": "node comprehensive-test-runner.js --skip-cross-browser --skip-performance"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "puppeteer": "^20.7.4",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.1",
    "jest-transform-file": "^1.1.1",
    "jest-watch-typeahead": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0"
  }
}

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection - Use MongoDB Atlas URL
MONGODB_URI_PRODUCTION=mongodb+srv://<username>:<password>@cluster.mongodb.net/refugee-network

# JWT Secret - Use a strong, unique secret for production
JWT_SECRET=replace_this_with_a_secure_random_string
JWT_EXPIRE=30d

# Email Configuration (for password reset, notifications)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-production-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@rncmalaysia.com
